---
import { Image } from "astro:assets";

const { author } = Astro.props;
const authorUrl = author.id;
const { name, avatar, bio, subtitle, twitter, linkedIn, github } = author.data;
---

<!-- component -->
<div
  class="max-w-lg mx-auto bg-white rounded-lg shadow-md p-5 hover:-translate-y-5 transition-all cursor-pointer"
>
  <a href={`/blog/${authorUrl}`}>
    <Image
      class="w-32 h-32 rounded-full mx-auto"
      src={avatar}
      alt={`Avatar-${name}`}
      width={200}
      height={200}
      loading="lazy"
    />
    <h2 class="text-center text-2xl font-semibold mt-3">{name}</h2>
    <p class="text-center text-gray-600 mt-1">{subtitle}</p>
    <div class="flex justify-center mt-5">
      <a href={twitter} class="text-blue-500 hover:text-blue-700 mx-3"
        >Twitter</a
      >
      <a href={linkedIn} class="text-blue-500 hover:text-blue-700 mx-3"
        >LinkedIn</a
      >
      <a href={github} class="text-blue-500 hover:text-blue-700 mx-3">Github</a>
    </div>
    <div class="mt-5">
      <h2 class="text-xl font-semibold">Bio</h2>
      <p class="text-gray-600 mt-2">
        {bio}
      </p>
    </div>
  </a>
</div>
