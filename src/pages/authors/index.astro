---
import AuthoresCard from "@components/AuthoresCard.astro";
import MainLayout from "@layouts/MainLayout.astro";
import Title from "@layouts/Title.astro";
import { getCollection } from "astro:content";

const authores = await getCollection("author");
---

<MainLayout title="Astro's Blog - Autores">
  <section class='bg-gray-900"'>
    <div
      class="flex flex-col justify-center gap-5 container px-6 py-10 mx-auto"
    >
      <div>
        <Title title="Autores" />
        <button
          class="text-blue-700 hover:text-blue-500"
          onclick="history.back()">Regresar</button
        >
      </div>
      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {authores.map((author) => <AuthoresCard author={author} />)}
      </div>
    </div>
  </section>
</MainLayout>
